<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.cnr.iit.broadcastsender.view.MainFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/create_group_button"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="CREATE GROUP" />

        <TextView
            android:id="@+id/group_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/create_group_button"
            android:layout_alignBottom="@id/create_group_button"
            android:layout_toRightOf="@id/create_group_button"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/remove_group_button"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="REMOVE GROUP" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/send_bcast_button"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="SEND BROADCAST" />

        <TextView
            android:id="@+id/send_bcast_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/send_bcast_button"
            android:layout_alignBottom="@id/send_bcast_button"
            android:layout_toRightOf="@id/send_bcast_button"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/send_unicast_button"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="SEND UNICAST" />

        <TextView
            android:id="@+id/send_unicast_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/send_unicast_button"
            android:layout_alignBottom="@id/send_unicast_button"
            android:layout_toRightOf="@id/send_unicast_button"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/stop_button"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="STOP" />

    </RelativeLayout>



</LinearLayout>